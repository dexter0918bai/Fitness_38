<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:scaleType="fitXY"
        android:src="@mipmap/ic_info"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="237dp"
        android:layout_height="271dp"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageView"
        app:layout_constraintVertical_bias="0.202">

        <TextView
            android:id="@+id/Name_p"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:background="@drawable/shape"
            android:hint="Name"
            android:textAlignment="center"
            android:visibility="visible" />

        <TextView
            android:id="@+id/DoB_p"
            android:layout_width="match_parent"
            android:layout_height="48dp"

            android:layout_marginTop="5dp"
            android:background="@drawable/shape"
            android:hint="DateBirth(dd/mm/yyyy)"
            android:textAlignment="center"
            />


        <TextView
            android:id="@+id/Height"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:background="@drawable/shape"

            android:hint="Height"
            android:minHeight="48dp"
            android:textAlignment="center" />


        <TextView
            android:id="@+id/CurrenWeight"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:layout_marginTop="5dp"
            android:background="@drawable/shape"

            android:hint="CurrenWeight"
            android:textAlignment="center" />

        <TextView
            android:id="@+id/TargetWeight_p"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:layout_marginTop="5dp"
            android:background="@drawable/shape"

            android:hint="TargetWeight"
            android:textAlignment="center" />

    </LinearLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="5dp"
        android:fontFamily="@font/rammetto_one"
        android:text="Your Profile"
        android:textColor="@color/colorAccent"
        android:textSize="34sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="@+id/imageView"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/targetStep_p"
        android:layout_width="141dp"
        android:layout_height="28dp"
        android:layout_marginEnd="36dp"
        android:layout_marginBottom="68dp"
        android:background="@drawable/shape"

        android:text="TextView"
        android:textAlignment="center"
        android:textSize="18dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <TextView
        android:id="@+id/targetCalorie_p"
        android:layout_width="141dp"
        android:layout_height="28dp"
        android:background="@drawable/shape"
        android:text="TextView"
        android:textAlignment="center"
        android:textSize="18dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/targetStep_p"
        app:layout_constraintHorizontal_bias="0.481"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/targetStep_p"
        app:layout_constraintVertical_bias="0.0" />

    <LinearLayout
        android:id="@+id/image"
        android:layout_width="57dp"
        android:layout_height="268dp"
        android:orientation="vertical"





        app:layout_constraintBottom_toBottomOf="@+id/linearLayout"
        app:layout_constraintEnd_toStartOf="@+id/linearLayout"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/linearLayout">


        <ImageView
            android:id="@+id/imageView2"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            app:srcCompat="@drawable/ic_verified_user" />

        <ImageView
            android:id="@+id/imageView3"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:layout_marginTop="5dp"
            app:srcCompat="@drawable/ic_celebration" />

        <ImageView
            android:id="@+id/imageView4"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:layout_marginTop="5dp"
            app:srcCompat="@drawable/ic_tall" />

        <ImageView
            android:id="@+id/imageView5"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:layout_marginTop="5dp"
            app:srcCompat="@drawable/ic_baseline_info_24" />

        <ImageView
            android:id="@+id/imageView6"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:layout_marginTop="5dp"
            app:srcCompat="@drawable/ic_target" />
    </LinearLayout>

    <TextView
        android:id="@+id/textView2"
        android:layout_width="155dp"
        android:layout_height="49dp"
        android:fontFamily="@font/titan_one"
        android:text="Your Target:"
        android:textColor="#000000"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/targetStep_p"
        app:layout_constraintHorizontal_bias="0.474"
        app:layout_constraintStart_toStartOf="@+id/targetCalorie_p"
        app:layout_constraintTop_toBottomOf="@+id/image"
        app:layout_constraintVertical_bias="0.4" />

</androidx.constraintlayout.widget.ConstraintLayout>